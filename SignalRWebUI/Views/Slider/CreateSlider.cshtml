@using SignalRWebUI.Dtos.SliderDtos
@model CreateSliderDto
@{
	ViewData["Title"] = "CreateSlider";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Öne Çıkan İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Öne Çıkan</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Title">1.Başlık</label>
								<input type="text" class="form-control" asp-for="Title1" id="Title">
							</div>
							<div class="form-group">
								<label for="Title">2.Başlık</label>
								<input type="text" class="form-control" asp-for="Title2" id="Title">
							</div>
							<div class="form-group">
								<label for="Title">3.Başlık</label>
								<input type="text" class="form-control" asp-for="Title3" id="Title">
							</div>
							<div class="form-group">
								<label for="description">Açıklama 1</label>
								<textarea type="text" rows="3" class="form-control" asp-for="Description1" id="description"></textarea>
							</div>
							<div class="form-group">
								<label for="description">Açıklama 2</label>
								<textarea type="text" rows="3" class="form-control" asp-for="Description2" id="description"></textarea>
							</div>
							<div class="form-group">
								<label for="description">Açıklama 3</label>
								<textarea type="text" rows="3" class="form-control" asp-for="Description3" id="description"></textarea>
							</div>
						</div>
						<div class="card-action">
							<button type="submit" class="btn btn-success">Öne Çıkan Ekle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>