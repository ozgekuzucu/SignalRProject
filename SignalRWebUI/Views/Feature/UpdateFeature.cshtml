@using SignalRWebUI.Dtos.FeatureDtos
@model UpdateFeatureDto
@{
	ViewData["Title"] = "UpdateFeature";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Öne Çıkan İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form asp-action="UpdateFeature" asp-controller="Feature" method="post">
					<div class="card">
						<div class="card-body">
							<input type="hidden" asp-for="FeatureId" />
							<div class="form-group">
								<label for="Title">Başlık</label>
								<input type="text" class="form-control" asp-for="Title" id="Title">
							</div>
							<div class="form-group">
								<label for="description">Açıklama</label>
								<textarea type="text" rows="3" class="form-control" asp-for="Description" id="description"></textarea>
							</div>
						</div>
						<div class="card-action">
							<button type="submit" class="btn btn-success">Güncelle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>