@using SignalRWebUI.Dtos.ProductDtos
@model List<ResultProductDto>
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

@await Component.InvokeAsync("_UILayoutHeadComponentPartial")

<body class="sub_page">

    @await Component.InvokeAsync("_MenuNavbarComponentPartial")

    <section class="food_section layout_padding">
        <div class="container">
            <div class="heading_container heading_center">
                <h2>Menümüz</h2>
            </div>

            @await Component.InvokeAsync("_MenuCategoryFilterComponentPartial")

            <div class="filters-content">
                <div class="row grid">
                    @foreach (var item in Model)
                    {
                        <div class="col-sm-6 col-lg-4 all @item.CategoryName">
                            <div class="box">
                                <div>
                                    <div class="img-box">
                                        <img src="@item.ImageUrl" alt="">
                                    </div>
                                    <div class="detail-box">
                                        <h5>@item.ProductName</h5>
                                        <p>@item.Description</p>
                                        <div class="options">
                                            <h6>@item.Price₺</h6>
                                            <a href="#" onclick="showproductid(@item.ProductID, @ViewBag.v)">
